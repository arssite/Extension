{
  "manifest_version": 3,
  "name": "Time Display Extension with User Form",
  "version": "1.1",
  "description": "A Chrome extension that shows the current time and collects user data.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
